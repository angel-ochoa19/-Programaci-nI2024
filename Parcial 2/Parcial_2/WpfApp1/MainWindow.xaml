<!-- MainWindow.xaml -->
<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculadora Científica" Height="511" Width="1238">
    <Grid Margin="0,-56,-114,0">
        <TextBox x:Name="txtNumero1" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtNumero2" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSumar" Content="Sumar" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Width="75" Click="btnSumar_Click"/>
        <!-- Similarmente para los otros botones -->
        <Button x:Name="btnConsultarMemoria" Content="Consultar Memoria" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Width="120" Click="btnConsultarMemoria_Click"/>
        <TextBox x:Name="txtResultado" HorizontalAlignment="Left" Height="23" Margin="10,152,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
